<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- List View -->
    <record id="view_estate_property_tree" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">

            <list string="Properties" create="true" edit="true" decoration-muted="state == 'sold'" decoration-success="state == 'offer_received'" decoration-primary="state == 'offer_accepted'">
                <field name="name" string="Title"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="tag_ids" widget="many2many_tags" string="Tags" options="{'color_field': 'color'}"/>
                <field name="bedrooms"/>
                <field name="living_area" string="Living Area (sqm)"/>
                <field name="expected_price" string="Expected Price"/>
                <field name="selling_price" string="Selling Price"/>
                <field name="date_availability" string="Available From" optional="show"/>

                <field name="total_area" optional="show"/>
                <field name="best_price" optional="show"/>
                <field name="state" optional="show"/>
            </list>
        </field>
    </record>


    <!-- Form View -->
    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">

                <header>
                    <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold,canceled"/>

                    <button name="action_mark_as_sold" string="Sold" type="object" class="btn-primary" modifiers='{"invisible": [["state", "in", ["sold", "canceled"]]]}'/>

                    <button name="action_cancel" string="Cancel" type="object" class="btn-secondary" modifiers='{"invisible": [["state", "in", ["sold", "canceled"]]]}'/>
                </header>


                <sheet style="padding-left: 3rem; padding-top: 1.5rem;">

                    <group style="margin-left: 2rem">
                        <h1>
                            <field name="name" style="font-size: 2.7rem; font-weight: bold;"/>
                        </h1>
                    </group>

                    <group style="margin-left: 2rem; margin-bottom: 1.8rem;">
                        <field name="tag_ids" widget="many2many_tags" nolabel="1" options="{'color_field': 'color'}"/>
                    </group>


                    <group>
                        <group style="margin-left: 2rem; margin-bottom: 1.5rem;">
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group position="inline" style="width: 40%;">
                            <field name="expected_price"/>
                            <field name="best_price" string="Best Offer" readonly="1"/>
                            <field name="selling_price" readonly="1"/>
                        </group>
                    </group>

                    <notebook>

                        <!-- Description Tab -->
                        <page string="Description" style="padding-left: 30rem">
                            <group style="margin-left: 2rem">

                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area" modifiers="{'invisible': [['garden', '=', False]]}"/>
                                    <field name="garden_orientation" modifiers="{'invisible': [['garden', '=', False]]}"/>

                                    <field name="total_area" readonly="1"/>

                                    <field name="state"/>
                                    <field name="active"/>
                                </group>
                            </group>

                        </page>

                        <!-- Offers Tab-->
                        <page string="Offers">
                            <field name="offer_ids" widget="one2many_list" modifiers='{"readonly": [["state", "in", ["offer_accepted", "sold", "canceled"]]]}'/>

                        </page>

                        <page string="Other Info" style="margin-left: 2 rem">
                            <group style="margin-left: 2rem">
                                <field name="salesman"/>
                                <field name="buyer"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>

                <!-- Filter: Available -->
                <filter name="available" string="Available" domain="['|', ('state','=','new'), ('state','=','offer_received')]" help="Show properties that are available"/>

                <!-- Group By -->
                <group expand="1" string="Group By">
                    <filter name="group_by_postcode" string="Postcode" context="{'group_by': 'postcode'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
