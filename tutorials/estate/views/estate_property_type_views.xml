<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="action_estate_property_type" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">list,form</field>
    </record>


    <!-- Tree view -->
    <record id="view_estate_property_type_tree" model="ir.ui.view">
        <field name="name">estate.property.type.tree</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_estate_property_type_form" model="ir.ui.view">
        <field name="name">estate.property.type.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>


                    <h1>
                        <field name="name" nolabel="1" style="font-size: 2.7rem; font-weight: bold;"/>
                    </h1>

                    <notebook>
                        <page string="Properties">
                            <field name="property_ids" nolabel="1">
                                <list editable="bottom" decoration-success="state == 'offer_received'" decoration-primary="state == 'offer_accepted'" decoration-muted="state == 'sold'">
                                    <field name="name" string="Title"/>
                                    <field name="expected_price"/>
                                    <field name="state" string="Status"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
